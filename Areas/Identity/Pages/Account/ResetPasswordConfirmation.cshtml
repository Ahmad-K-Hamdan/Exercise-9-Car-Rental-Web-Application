@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4 text-center" style="max-width: 400px; width: 100%;">
        <h2 class="mb-3 text-success">@ViewData["Title"]</h2>
        <p class="text-muted mb-4">Your password has been successfully reset.</p>
        <a asp-page="./Login" class="btn btn-primary w-100">Go to Login</a>
    </div>
</div>
