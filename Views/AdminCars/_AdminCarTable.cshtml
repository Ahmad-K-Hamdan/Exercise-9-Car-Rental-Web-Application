@model IEnumerable<CarRentalWebApplication.Models.Car>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center mt-3">
        No cars found for the selected filters.
    </div>
}
else
{
    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle w-100">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Make & Model</th>
                    <th>Year</th>
                    <th>Rate</th>
                    <th>Color</th>
                    <th>Status</th>
                    <th style="width: 1%"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 0;
                }
                @foreach (var car in Model)
                {
                    string rowClass = !car.IsVisible ? "table-secondary" :
                    !car.IsAvailable ? "table-warning-subtle" : "";

                    <tr class="@rowClass">
                        <td>@(++index)</td>
                        <td>
                            <img src="@car.ImageUrl" alt="@car.Make"
                                 class="rounded"
                                 style="height: 60px; width: 100px; object-fit: cover;">
                        </td>
                        <td class="fw-semibold">@car.Make @car.Model</td>
                        <td>@car.Year</td>
                        <td>$@car.DailyRate / day</td>
                        <td>@car.Color</td>

                        <td>
                            @if (!car.IsVisible)
                            {
                                <span class="badge bg-dark">Hidden</span>
                            }
                            else if (!car.IsAvailable)
                            {
                                <span class="badge bg-warning text-dark">Rented</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Available</span>
                            }
                        </td>

                        <td>
                            @if (!car.IsAvailable)
                            {
                                <button class="btn btn-sm btn-outline-secondary" disabled>
                                    <i class="bi bi-lock"></i> Rented
                                </button>
                            }
                            else if (car.IsVisible)
                            {
                                <form asp-action="Hide" method="post" class="m-0">
                                    <input type="hidden" name="carId" value="@car.CarId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-eye-slash"></i> Hide
                                    </button>
                                    @Html.AntiForgeryToken()
                                </form>
                            }
                            else
                            {
                                <form asp-action="UnHide" method="post" class="m-0">
                                    <input type="hidden" name="carId" value="@car.CarId" />
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-eye"></i> Unhide
                                    </button>
                                    @Html.AntiForgeryToken()
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
