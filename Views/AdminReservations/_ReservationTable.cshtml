@model IEnumerable<CarRentalWebApplication.Models.Rental>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">No reservations found.</div>
}
else
{
    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle w-100">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Car</th>
                    <th>User</th>
                    <th>Period</th>
                    <th>Duration</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th style="width:1%"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 0;
                }
                @foreach (var r in Model)
                {
                    bool overdue = !r.IsReturned && DateTime.Today > r.ReturnDate;
                    string badge = overdue ? "bg-danger" : r.IsReturned ? "bg-secondary" : "bg-success";
                    string status = overdue ? "Overdue" : r.IsReturned ? "Completed" : "Active";

                    <tr class="@(overdue ? "table-danger" : "")">
                        <td>@(++index)</td>
                        <td>
                            <div class="fw-semibold">@r.Car?.Make @r.Car?.Model</div>
                            <div class="text-muted small">@r.Car?.Year • @r.Car?.PlateNumber</div>
                        </td>
                        <td>
                            <div>@($"{r.User?.FirstName} {r.User?.LastName}")</div>
                            <div class="text-muted small">@r.User?.Email</div>
                        </td>
                        <td>
                            <div><strong>From:</strong> @r.StartDate.ToShortDateString()</div>
                            <div><strong>To:</strong> @r.ReturnDate.ToShortDateString()</div>
                        </td>
                        <td>@r.DurationDays day(s)</td>
                        <td>$@r.TotalPrice</td>
                        <td><span class="badge @badge">@status</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
