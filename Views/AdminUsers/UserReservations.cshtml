@model IEnumerable<CarRentalWebApplication.Models.Rental>

@{
    ViewData["Title"] = $"Reservations for {ViewData["FullName"]}";
    bool IsOverdue(DateTime returnDate, bool isReturned)
        => !isReturned && DateTime.Today > returnDate.Date;
}

<div class="container-fluid mt-4">
    <div class="mx-auto" style="max-width: 1200px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold mb-0">
                Reservations for <span class="text-primary">@ViewData["FullName"]</span>
            </h2>
            <a asp-action="Users" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">This user has no reservations.</div>
        }
        else
        {
            <div class="table-responsive shadow-sm">
                <table class="table table-striped table-hover align-middle w-100">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Car</th>
                            <th>Period</th>
                            <th>Total Price</th>
                            <th>Status</th>
                            <th style="width:1%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 0;
                        }
                        @foreach (var r in Model)
                        {
                            bool overdue = IsOverdue(r.ReturnDate, r.IsReturned);

                            <tr class="@(overdue ? "table-danger-subtle" : "")">
                                <td>@(++index)</td>
                                <td>
                                    <div class="fw-semibold">@r.Car.Make @r.Car.Model</div>
                                    <div class="text-muted small">@r.Car.Year • @r.Car.PlateNumber</div>
                                </td>
                                <td>
                                    <div><strong>From:</strong> @r.StartDate.ToShortDateString()</div>
                                    <div><strong>To:</strong> @r.ReturnDate.ToShortDateString()</div>
                                </td>
                                <td>$@r.TotalPrice</td>
                                <td>
                                    @if (r.IsReturned)
                                    {
                                        <span class="badge bg-secondary">Returned</span>
                                    }
                                    else if (r.IsActive)
                                    {
                                        if (overdue)
                                        {
                                            <span class="badge bg-danger">Overdue</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>
                                <td>
                                    @if (r.IsActive && !r.IsReturned)
                                    {
                                        <form asp-action="TerminateReservation" method="post" class="m-0">
                                            <input type="hidden" name="rentalId" value="@r.RentalId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                Terminate
                                            </button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
