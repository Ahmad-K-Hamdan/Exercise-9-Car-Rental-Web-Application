@model IEnumerable<(CarRentalWebApplication.Models.User user, IList<string> roles)>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">No users found.</div>
}
else
{
    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle w-100">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 0;
                }
                @foreach (var (user, roles) in Model)
                {
                    <tr>
                        <td>@(++index)</td>
                        <td>@($"{user.FirstName} {user.LastName}")</td>
                        <td>@user.Email</td>
                        <td>@string.Join(", ", roles)</td>
                        <td>
                            @if (!roles.Contains("Admin"))
                            {
                                <form asp-action="PromoteToAdmin" method="post" class="m-0">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary">
                                        Promote to Admin
                                    </button>
                                    @Html.AntiForgeryToken()
                                </form>
                            }
                            else
                            {
                                <span class="badge bg-success">Admin</span>
                            }
                        </td>
                        <td>
                            @if (!roles.Contains("Admin"))
                            {
                                <a asp-action="UserReservations" asp-route-userId="@user.Id"
                                   class="btn btn-sm btn-outline-info">
                                    View Reservations
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
