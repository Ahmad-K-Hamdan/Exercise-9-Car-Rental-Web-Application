@model CarRentalWebApplication.Models.Car

@{
    ViewData["Title"] = "Add New Car";
}

<div class="container-fluid mt-4">
    <div class="mx-auto" style="max-width: 800px;">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h3 class="fw-bold mb-4 text-center">Add New Car</h3>

                <form asp-controller="Cars" asp-action="Add" method="post">
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                    <div class="mb-3">
                        <label asp-for="Make" class="form-label fw-semibold"></label>
                        <input asp-for="Make" class="form-control" />
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Model" class="form-label fw-semibold"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Year" class="form-label fw-semibold"></label>
                            <input asp-for="Year" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Color" class="form-label fw-semibold"></label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DailyRate" class="form-label fw-semibold"></label>
                        <input asp-for="DailyRate" class="form-control" />
                        <span asp-validation-for="DailyRate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FuelType" class="form-label fw-semibold"></label>
                        <input asp-for="FuelType" class="form-control" />
                        <span asp-validation-for="FuelType" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Transmission" class="form-label fw-semibold"></label>
                        <input asp-for="Transmission" class="form-control" />
                        <span asp-validation-for="Transmission" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PlateNumber" class="form-label fw-semibold"></label>
                        <input asp-for="PlateNumber" class="form-control" />
                        <span asp-validation-for="PlateNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label fw-semibold"></label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-lg me-1"></i> Add Car
                        </button>
                        <a asp-action="Admin" class="btn btn-secondary px-4 ms-2">
                            <i class="bi bi-arrow-left me-1"></i> Back
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
