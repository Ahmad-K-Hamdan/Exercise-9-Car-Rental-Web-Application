@model CarRentalWebApplication.Models.Rental

@{
    ViewData["Title"] = "Reserve Car";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Reserve @Model.Car.Make @Model.Car.Model</h2>

    <form asp-action="Create" method="post" class="w-50 mx-auto shadow p-4 rounded bg-light">
        <input type="hidden" asp-for="CarId" />

        <div class="mb-3">
            <label asp-for="StartDate" class="form-label fw-bold">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label for="returnDate" class="form-label fw-bold">Return Date</label>
            <input type="date" id="returnDate" name="returnDate" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="PaymentType" class="form-label fw-bold">Payment Type</label>
            <select asp-for="PaymentType" class="form-select">
                <option value="Cash">Cash</option>
                <option value="Credit Card">Credit Card</option>
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Confirm Reservation</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('returnDate').setAttribute('min', today);
    </script>
}
